!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'

  %body
    .single-container
      %header.single-container__header
      %main.single-main
        %section.single-main__container
          %h2.single-main__container--header 会員情報入力
          = form_for(resource, as: resource_name, url: registration_path(resource_name)class="single-inner") do |f|
             / リンク先反映まだ

          = render "devise/shared/error_messages", resource: resource
            / エラー画面のview作成前

            .single-content
              .form-group
                = f.label :ニックネーム
                %span.form-require{:style => "必須"}
                %br/
                = f.text_field :nickname, autofocus: true, :placeholder => "例）メルカリ太郎", class="input-default"
              .form-group
                = f.label :メールアドレス
                = succeed "br" do
                  %span.form-require{:style => "必須"}
                = f.email_field :email, autofocus: true, :placeholder => "PC・携帯どちらでも可", class="input-default"
              .form-group
                = f.label :パスワード
                %span.form-require{:style => "必須"}
                %br/
                - if @minimum_password_length
                  %em
                    (#{@minimum_password_length} characters minimum)
                %br/
                = f.password_field :password, :placeholder => "６文字以上", class="input-default"
              .form-group
                = f.label :パスワード（確認）
                %span.form-require{:style => "必須"}
                %br/
                = f.password_field :password_confirmation, :placeholder => "６文字以上", minlength: "6", class="input-default"
          .actions
            = f.submit "会員登録する"
    = render "devise/shared/links"
